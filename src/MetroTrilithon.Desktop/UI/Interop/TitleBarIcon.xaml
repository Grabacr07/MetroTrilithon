<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:interop="clr-namespace:MetroTrilithon.UI.Interop">

    <Style TargetType="interop:TitleBarIcon">
        <Setter Property="OverridesDefaultStyle"
                Value="True" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Height"
                Value="19" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,0,12,0" />
        <Setter Property="Focusable"
                Value="True" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="RenderOptions.BitmapScalingMode"
                Value="HighQuality" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="interop:TitleBarIcon">
                    <ContentPresenter Content="{TemplateBinding Icon}"
                                      Focusable="{TemplateBinding Focusable}"
                                      RenderOptions.BitmapScalingMode="{TemplateBinding RenderOptions.BitmapScalingMode}">
                    </ContentPresenter>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
